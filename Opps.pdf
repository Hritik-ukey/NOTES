    delete ptr;  // âœ… Memory free ho rahi hai!
}

int main() {
    for (int i = 0; i < 1000000; i++) {
        memoryLeakFixed();  // Har baar memory free ho rahi hai, koi leak nahi!
    }
    return 0;
}
